{{!< admin}}

    <!-- BEGIN PAGE -->
    <div class="page-content">
        <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->
            <div class="row-fluid">
                <div class="span12">
                    <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                    <h3 class="page-title">
                        Users management <small>managed users</small>
                    </h3>
                    <ul class="breadcrumb">
                        <li>
                            <i class="icon-home"></i>
                            <a href="/admin/dashbord">Home</a>
                            <i class="icon-angle-right"></i>
                        </li>
                        <li><a href="#">Managed Users Table</a></li>
                    </ul>
                    <!-- END PAGE TITLE & BREADCRUMB-->
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row flash-message" style="text-align:center">
                <span style="color:cornflowerblue; font-size: 20pt"><b>{{message.successUpdate}}</b></span>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box light-grey">
                        <div class="portlet-title">
                           
                        </div>
                        <div class="portlet-body">
                                <!--<div class="table-toolbar">
                                    <div class="btn-group">
                                        <a href="/admin/add-user" id="sample_editable_1_new" class="btn green">
                                            Add New <i class="icon-plus"></i>
                                        </a>
                                    </div>
                                </div>-->
                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                <thead>
                                    <tr>
                                        <th style="width:8px;"><input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" /></th>
                                        <th>Name</th>
                                        <th class="hidden-480">Email</th>
                                        <th class="hidden-480">Phone</th>
                                        <th class="hidden-480">Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each json as |obj|}}
                                    <tr class="odd gradeX">
                                        <td><input type="checkbox" class="checkboxes" value="1" /></td>
                                        <td>{{obj.name}}</td>
                                        <td class="hidden-480"><a href="{{obj.email}}">{{obj.email}}</a></td>
                                        <td class="hidden-480">{{obj.phone}}</td>
                                        {{#if (eq Active)}}
                                        <td><span class="label label-success">{{obj.status}}</span></td>
                                        {{else}}
                                        <td><span class="label label-error">{{obj.status}}</span></td>
                                        {{/if}}
                                        <td class="center hidden-480">
                                            <a href="/admin/users-management-update/{{obj._id}}"><button class="btn blue"><span style="color:white">Update</span></button></a>
                                            <a href="/admin/delete-user/{{obj._id}}"><button class="btn red"><span style="color:white">Delete</span></button></a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
        <!-- END PAGE CONTAINER-->
    </div>
    <!-- END PAGE -->
