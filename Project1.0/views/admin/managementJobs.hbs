        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet box light-grey">
                    <div class="portlet-title">

                    </div>
                    <div class="portlet-body">
                        <!--<div class="table-toolbar">
                            <div class="btn-group">
                                <a href="/admin/add-user" id="sample_editable_1_new" class="btn green">
                                    Add New <i class="icon-plus"></i>
                                </a>
                            </div>
                        </div>-->
                        <table class="table table-striped table-bordered table-hover" id="sample_1">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Title</th>
                                    <th class="hidden-480">Location</th>
                                    <th class="hidden-480">Salary</th>
                                    <th class="hidden-480">Expire Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each json as |obj|}}
                                <tr class="odd gradeX">
                                    <td class="add-img-td">
                                            {{#if obj.image}}
                                            <img class="img-responsive" src="{{obj.image}}" width="80" height="30" alt="img">
                                            {{else}}
                                            <img class="img-responsive" src="http://static.careerbuilder.vn/themes/kiemviecv32/images/graphics/logo-default.png" width="80" height="30" alt="img">
                                            {{/if}}
                                    </td>
                                    <td>{{obj.title}}</td>
                                    <td class="hidden-480">{{obj.location}}</a></td>
                                    <td class="hidden-480">{{obj.salary}}</td>
                                    <td class="hidden-480">{{obj.expireDate}}</td>
                                    <td class="center hidden-480">
                                        <a href="/admin/jobs-management-update/{{obj._id}}"><button class="btn blue"><span style="color:white">Cập nhật</span></button></a>
                                        <a href="/admin/delete-job/{{obj._id}}"><button class="btn red"><span style="color:white">Xóa</span></button></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
    <!-- END PAGE CONTAINER-->
