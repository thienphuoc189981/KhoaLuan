<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                <h3 class="page-title">
                    Quản lý việc làm
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="/admin/dashbord">Trang thống kê</a>
                        <i class="icon-angle-right"></i>
                    </li>
                    <li><a href="#">Danh sach việc làm</a></li>
                </ul>
                <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row flash-message" style="text-align:center">
    <span style="color:cornflowerblue; font-size: 20pt"><b>{{message.successUpdate}}</b></span>
