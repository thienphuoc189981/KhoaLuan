<script>
    function getBrowser() {
        if (navigator.userAgent.indexOf("Chrome") != -1) {
            return "Chrome";
        } else if (navigator.userAgent.indexOf("Firefox") != -1) {
            return "Firefox";
        } else {
            return "unknown";
        }
    }
    $(function () {
        switch (getBrowser()) {
            case "Chrome":
                $(".btn-chrome").show();
                break;
            case "Firefox":
                $(".btn-firefox").show();
                break;
            default:
                $(".nosupp").show();
                break;
        }
    });
   
</script>