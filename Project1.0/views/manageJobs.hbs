<div id="content">
    <div class="container">
        <div class="row flash-message" style="text-align:center">
        <span style="color:cornflowerblue; font-size: 20pt"><b>{{message.success}}</b></span>
        </div>
        <div class="row">
            <div class="col-sm-12 page-content">
                <div class="inner-box">
                    <h2 class="title-2"><i class="fa fa-hourglass-o"></i> List of posted jobs</h2>
                    <div class="table-responsive">
                        <div class="table-action">
                            <!--<div class="checkbox">
                                <label for="checkAll">
                                    <input id="checkAll" onclick="checkAll(this)" type="checkbox">
                                    Select: All | <a href="#" class="btn btn-xs btn-danger">Delete <i class="fa fa-close"></i></a>
                                </label>
                            </div>-->
                            <!--<div class="table-search pull-right col-xs-7">
                                <div class="form-group">
                                    <label class="col-xs-5 control-label text-right">
                                        Search <br>
                                        <a title="clear filter" class="clear-filter" href="#clear">[clear]</a>
                                    </label>
                                    <div class="col-xs-7 searchpan">
                                        <input class="form-control" id="filter" type="text">
                                    </div>
                                </div>
                            </div>-->
                        </div>
                       
                        <table class="table table-striped table-bordered add-manage-table">
                            <thead>
                                <tr>
                                    <th data-type="numeric"></th>
                                    <th>Photo</th>
                                    <th>Jobs Details</th>
                                    <th>Applicator</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each jobs as |item|}}
                                <tr>
                                    <td class="add-img-selector">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox">
                                            </label>
                                        </div>
                                    </td>
                                    <td class="add-img-td">
                                        <a href="/job-detail/{{item._id}}">
                                            {{#if item.attachment}}
                                            <img class="img-responsive" src="{{item.attachment}}" alt="img">
                                            {{else}}
                                            <img class="img-responsive" src="assets/img/default.jpg" alt="img">
                                            {{/if}}
                                        </a>
                                    </td>
                                    <td class="ads-details-td">
                                        <h4><a href="/job-detail/{{item._id}}">{{item.title}}</a></h4>
                                        <p>
                                            <strong> Posted On </strong>:
                                            {{item.datetime}}
                                        </p>
                                        <p> <strong>Location </strong>: {{item.location}} 
                                        <p> <strong>Salary </strong>: {{item.salary}} 
                                    </td>
                                    <td class="price-td">
                                        {{#if item.users.applicator}}
                                        <strong> {{item.users.applicator}}</strong>
                                        {{else}}
                                        <strong><i>None</i></strong>
                                        {{/if}}
                                    </td>
                                    <td class="action-td">
                                        <p><a href="/update-job/{{item._id}}" class="btn btn-primary btn-xs"> <i class="fa fa-pencil-square-o"></i> Edit</a></p>
                                        <p> <a href="/delete-job/{{item._id}}" class="btn btn-danger btn-xs"> <i class="fa fa-trash"></i> Delete </a></p>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function blink() {
        $('.flash-message').fadeOut(3000);
    })();
</script>