<!-- Start Content -->

<div id="content">
    <div class="container">
        <div class="row flash-message" style="text-align:center">
            <span style="color:cornflowerblue; font-size: 20pt"><b>{{message.successApply}}</b></span>
        </div>
        <div class="row">
            <!-- Product Info Start -->
            <div class="product-info">
                <div class="col-lg-offset-1 col-sm-10">
                    <div class="inner-box ads-details-wrapper">
                        <div class="img-detail">
                            {{#if job.attachment}}
                            <img src="{{job.attachment}}" alt="company photo">
                            {{else}}
                            <img src="/assets/img/default.jpg" alt="company photo" height="120" width="200">
                            {{/if}}
                            {{#if sessoion.email}}
                            <span style="margin-left:400px">
                                <a class="btn btn-danger btn-post" href="/apply/{{job._id}}">
                                    <span class="fa fa-plus-circle"></span> Apply now
                                </a>
                            </span>
                            {{else}}
                            <span style="margin-left:400px">
                                <button class="btn btn-danger btn-post" data-toggle="modal" data-target="#myModal" type="button">
                                    <span class="fa fa-plus-circle"></span> Apply now
                                </button>
                            </span>
                            <div class="modal fade" id="myModal" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Signup to apply</h4>
                                        </div>
                                        <div class="modal-body">
                                            <form role="form" class="login-form" method="post" id="signup-form" action="/apply-signup" name="registration">
                                                <input name="id" value="{{job._id}}" type="hidden"/>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        <i class="icon fa fa-user"></i>
                                                        <input type="text" id="name" class="form-control" name="name" placeholder="Your name">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        <i class="icon fa fa-envelope"></i>
                                                        <input type="text" id="email" class="form-control" name="email" placeholder="Email Address">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        <i class="icon fa fa-mobile"></i>
                                                        <input type="text" id="phone" class="form-control" name="phone" placeholder="Phone number">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        <i class="icon fa fa-unlock-alt"></i>
                                                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                                                    </div>
                                                </div>
                                                <div id="divCheckPassword"></div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        <i class="icon fa fa-unlock-alt"></i>
                                                        <input type="password" id="rePassword" class="form-control" placeholder="Retype Password">
                                                    </div>
                                                </div>
                                                <button class="btn btn-common log-btn" type="submit">Register</button>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            {{/if}}
                           
                        </div>
                        
                    <div class="Ads-Details">
                        <h2 class="title-2"><strong>{{job.title}}</strong></h2>
                        <p class="item-intro"><span class="poster"><span class="date">{{job.postDate}}</span></span></p>
                            <div class="row">
                                <div class="ads-details-info col-md-8">
                                    <p>{{job.description}}</p>
                                </div>
                                <div class="col-md-4">
                                    <aside class="panel panel-body panel-details">
                                        <ul>
                                            <li>
                                                <p class="no-margin "><strong>Salary:</strong> {{job.salary}}</p>
                                            </li>
                                            <li>
                                                <p class="no-margin"><strong>Location:</strong> {{job.location}}</p>
                                            </li>
                                            <li>
                                                <p class="no-margin"><strong>expire Date:</strong> {{job.expireDate}}</p>
                                            </li>
                                        </ul>
                                    </aside>

                                    <div class="ads-action">
                                        <ul class="list-border">
                                            <li>
                                                <a href="#"> <i class="fa fa-phone"></i> 0999444555 </a>
                                            </li>
                                            <li>
                                            <li>
                                                <a href="#"> <i class="fa fa-share-alt"></i> Share </a>
                                                <div class="social-link">
                                                    <a class="twitter" target="_blank" data-original-title="twitter" href="#" data-toggle="tooltip" data-placement="top"><i class="fa fa-twitter"></i></a>
                                                    <a class="facebook" target="_blank" data-original-title="facebook" href="#" data-toggle="tooltip" data-placement="top"><i class="fa fa-facebook"></i></a>
                                                    <a class="google" target="_blank" data-original-title="google-plus" href="#" data-toggle="tooltip" data-placement="top"><i class="fa fa-google"></i></a>
                                                    <a class="linkedin" target="_blank" data-original-title="linkedin" href="#" data-toggle="tooltip" data-placement="top"><i class="fa fa-linkedin"></i></a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            <!-- Product Info End -->
        </div>
    </div>
</div>
    </div>
<!-- End Content -->