    <script>
    function getBrowser() {
        if (navigator.userAgent.indexOf("Chrome") != -1) {
            return "Chrome";
        } else if (navigator.userAgent.indexOf("Firefox") != -1) {
            return "Firefox";
        } else {
            return "unknown";
        }
    }
    $(function () {
        switch (getBrowser()) {
            case "Chrome":
                $(".btn-chrome").show();
                break;
            case "Firefox":
                $(".btn-firefox").show();
                break;
            default:
                $(".nosupp").show();
                break;
        }
    });

    </script>
    <script>

    function isPasswordMatch() {
        var password = $("#password").val();
    var confirmPassword = $("#rePassword").val();

    if (password != confirmPassword) {
        $("#divCheckPassword").html("<span style='color:red;'><b>Passwords do not match!</b></span>");
    } else {
        $("#divCheckPassword").html("<span style='color:green;'><b>Passwords match.</b></span>");
    }
}

$(document).ready(function () {
    $("#rePassword").keyup(isPasswordMatch);
    $("#password").keyup(isPasswordMatch);
});

    </script>
