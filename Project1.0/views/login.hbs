<!-- Page Header Start -->
<div class="page-header" style="background: url(assets/img/banner1.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-wrapper">
                    <h2 class="page-title">Đăng nhập tài khoản</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Content section Start -->
<section id="content">
    <div class="container">
       
        <div class="row">
            <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
                {{#if mess }}
                <div style="color:red; align:center;"><p>{{mess}}</p></div>
                {{/if}}
                <div class="page-login-form box">
                    <h3>
                        Đăng nhập
                    </h3>
                    <form role="form" class="login-form" action="/login-authen" method="post">
                        <input type="hidden" name="nextlink" value="{{nextlink}}" />
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="icon fa fa-user"></i>
                                <input type="text" id="sender-email" class="form-control" name="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="icon fa fa-unlock-alt"></i>
                                <input type="password" name="password" class="form-control" placeholder="Password">
                            </div>
                        </div>
                        
                        <button class="btn btn-common log-btn">Đăng nhập</button>
                    </form>
                    <ul class="form-links">
                        <li class="pull-left"><a href="/signup">Chưa có tài khoản?</a></li>
                        <li class="pull-right"><a href="/forgot-password">Quên mật khẩu?</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content section End --> 