<!-- Content section Start -->
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-9 col-md-offset-2">
                <div class="page-ads box">
                    <h2 class="title-2">
                        Cập nhật việc làm
                    </h2>
                    <form class="form-ad" method="post" action="/update-job-submit" enctype="multipart/form-data">
                        <input type="hidden" value="{{job._id}}" name="_id" />
                        <input type="hidden" value="{{job._rev}}" name="_rev" />
                        <div class="form-group">
                            <label class="control-label">Category</label>
                            <select name="category" id="category-group" class="form-control">
                                {{#each cats as |item|}}
                                {{#if (eq item)}}
                                <option value="{{item}}" selected>{{item}}</option>
                                {{else}}
                                <option value="{{item}}">{{item}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Job title</label>
                            <input name="title" class="form-control input-md" required="" type="text" value="{{job.title}}">
                            <span class="help-block">A great title needs at least 60 characters. </span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="textarea">Job description</label>
                            <textarea class="form-control" id="textarea" name="description">{{job.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Location</label>
                            <input name="location" value="{{job.location}}" class="form-control input-md" required="" type="text">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="salary">Salary</label>
                            <p><span style="color:blue">*Website sẽ hiển thị đúng những gì bạn nhập</span></p>
                            <div class="form-inline">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" id="salary" placeholder="5 triệu - 10 triệu" name="salary" class="form-control" value="{{job.salary}}">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="expireDate">Expire Date</label>
                            <div class="form-inline">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input name="expireDate" class="form-control datepicker input-md" data-date-format="dd/mm/yyyy" required="" value="{{job.expireDate}}">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2 class="title-2">
                            Logo công ty
                        </h2>
                        <div class="form-group">
                            {{#if job.image}}
                            <img class="img-responsive" id="update-img" src="{{job.image}}" alt="img" width="300" height="200" />
                            {{else}}
                            <img class="img-responsive" id="update-img" src="http://static.careerbuilder.vn/themes/kiemviecv32/images/graphics/logo-default.png" alt="img" width="300" height="200" />
                            {{/if}}
                        </div>
                        <input type="file" name="photo" id="input-photo" />
                        <div class="form-group">
                            <div class="well">
                                <button type="submit" class="btn btn-common">Cập nhật</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content section End --> 
<script>
   function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#update-img').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

   $("#input-photo").change(function () {
        readURL(this);
   });

   $('.datepicker').datepicker({
   });
</script>